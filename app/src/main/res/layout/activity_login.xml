<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Login">

    <ImageView
        android:id="@+id/back_to_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:padding="20dp" />

    <!--    <LinearLayout-->
    <!--        android:id="@+id/login_linear"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="120dp"-->
    <!--        android:orientation="vertical"-->
    <!--        android:background="@drawable/gradient_curve">-->


    <!--</LinearLayout>-->

    <ScrollView
        android:id="@+id/login_scrollview"
        android:layout_below="@+id/back_to_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_small"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D R E A S Y"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/dark_red"
                android:textSize="16sp"
                android:layout_marginBottom="50dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_email_TIL">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/login_email"
                    android:inputType="textEmailAddress"
                    android:hint="E-mail"
                    android:backgroundTint="@color/transparent"
                    android:drawableEnd="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="30dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_passwd_TIL"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/dark_red"
                android:layout_marginBottom="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/login_passwd"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:backgroundTint="@color/transparent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_forgot_passwd"
                android:text="Forgot Password?"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="textEnd"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/dark_red"
                android:background="@drawable/reg_btn"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account yet?  "
                    android:fontFamily="sans-serif-condensed" />

                <TextView
                    android:id="@+id/reg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="italic"
                    android:textColor="@color/dark_red"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright &#169; Dreasy, 2021"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"/>


</RelativeLayout>