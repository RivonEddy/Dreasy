<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/order_driver_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_11"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/order_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Successful"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/order_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="duration"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/order_rating1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/order_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textAlignment="textEnd"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/order_staus_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_sentiment_very_satisfied_24" />

</LinearLayout>