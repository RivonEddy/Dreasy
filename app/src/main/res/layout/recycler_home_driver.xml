<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:id="@+id/recycler_home_driver">

<!--    Recruiter's picture-->
<!--    full name-->
<!--    status of transaction (failed/successful)-->
<!--    check sign (failed/successful)-->

    <ImageView
        android:id="@+id/recruiter_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_11"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/recruiter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recruiter's Name"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Status"
            android:padding="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_sentiment_very_satisfied_24"
        android:padding="5dp"
        android:layout_gravity="center"/>

</LinearLayout>